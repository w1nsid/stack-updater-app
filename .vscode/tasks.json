{
    // VS Code Tasks for Stack Updater App
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run app",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "--env-file",
                ".env",
                "python",
                "main.py"
            ],
            "group": "none",
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false
            }
        },
        {
            "label": "uv sync",
            "type": "shell",
            "command": "uv",
            "args": [
                "sync",
                "--extra",
                "dev"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run tests",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "pytest",
                "tests/",
                "-v"
            ],
            "group": "test",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}