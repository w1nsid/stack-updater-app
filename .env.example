# Portainer Configuration
PORTAINER_URL=https://portainer.example.com
PORTAINER_API_KEY=ptr_xxxxxxxxxxxxxxxxxxxxxxxxx

# Application Settings
REFRESH_INTERVAL=30
OUTDATED_AFTER_SECONDS=86400

# SSL Verification (set to false for self-signed certificates)
VERIFY_SSL=true

# Database Configuration
# For Docker: Use /app/data/app.db to persist data in mounted volume
# For Local: Use sqlite:///./app.db
DATABASE_URL=sqlite:///./data/app.db

# Optional Cloudflare Access (Zero Trust) headers for Portainer
# Leave empty if not using Cloudflare Access
CF_ACCESS_CLIENT_ID=
CF_ACCESS_CLIENT_SECRET=
